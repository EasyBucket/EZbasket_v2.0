{
  "manifest_version": 2,

  "name": "ez_basket_chromeExtension",
  "description": "easily add favorite product and compare price",
  "version": "1.3.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  
  "permissions": [
  	"contextMenus",
    "tabs",
    "<all_urls>",
    "storage",
    "activeTab",
    "declarativeContent"
  ],

  "background":{
  	"scripts" : ["background.js"],
  	"persistent" : true
    },
    
    "content_scripts": [{
      "matches": ["http://*/*"],
      "js": ["content.js"],
      "all_frames": true
    }]
  
}